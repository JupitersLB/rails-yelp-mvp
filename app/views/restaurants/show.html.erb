<h1 class="pt-5"><%= @restaurant.name %></h1><hr>
<h3><%= @restaurant.category %></h3>
<p><%= @restaurant.address %></p>
<p><%= @restaurant.phone_number %></p>

<h5 class="mt-5">Reviews!</h5><hr>
<% @reviews.each do |review| %>
  <div class="row justify-content-around">
    <p><strong><%= review.rating %></strong></p>
    <p><%= review.content %></p>
  </div>

<% end %>

<%= link_to 'Leave a review', new_restaurant_review_path(@restaurant), class: 'btn btn-light' %>
