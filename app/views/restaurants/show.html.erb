<h1 class="pt-5"><%= @restaurant.name %></h1><hr>
<h3><%= @restaurant.category %></h3>
<p><%= @restaurant.address %></p>
<p class="mb-5"><%= @restaurant.phone_number %></p>

<h5 class="mt-5">Reviews!</h5><hr>
<% @reviews.each do |review| %>
  <div class="row justify-content-around">
    <p><strong><%= review.rating %></strong></p>
    <p><%= review.content %></p>
  </div>

<% end %>

  <button class="btn btn-outline-dark mb-5" type="button" data-toggle="collapse" data-target="#collapseExample" aria-expanded="false" aria-controls="collapseExample">
    Add a Review
  </button>
    <div class="collapse" id="collapseExample">
      <div class="card card-body bg-transparent">
        <%= render 'reviews/form', restaurant: @restaurant, review: @review %>
      </div>
    </div>
  </div>
</div>
